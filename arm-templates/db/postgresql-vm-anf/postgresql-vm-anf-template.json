{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "type": "string",
      "defaultValue": "postgresql-vm",
      "metadata": {
        "description": "Name of the virtual machine"
      }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "azureuser",
      "metadata": {
        "description": "Username for the Virtual Machine"
      }
    },
    "authenticationType": {
      "type": "string",
      "defaultValue": "password",
      "allowedValues": [
        "password",
        "sshPublicKey"
      ],
      "metadata": {
        "description": "Type of authentication to use on the Virtual Machine"
      }
    },
    "adminPasswordOrKey": {
      "type": "securestring",
      "metadata": {
        "description": "Password or SSH key for the Virtual Machine"
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_D2s_v3",
      "metadata": {
        "description": "Size of the virtual machine"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "postgresqlVersion": {
      "type": "string",
      "defaultValue": "15",
      "allowedValues": [
        "14",
        "15",
        "16"
      ],
      "metadata": {
        "description": "PostgreSQL version to install (14, 15, or 16)"
      }
    },
    "postgresqlAdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for PostgreSQL superuser (postgres)"
      }
    },
    "databaseName": {
      "type": "string",
      "defaultValue": "mydb",
      "metadata": {
        "description": "Name of the PostgreSQL database to create"
      }
    },
    "databaseUser": {
      "type": "string",
      "defaultValue": "appuser",
      "metadata": {
        "description": "Name of the PostgreSQL database user to create"
      }
    },
    "databasePassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the PostgreSQL database user"
      }
    },
    "postgresqlPort": {
      "type": "int",
      "defaultValue": 5432,
      "metadata": {
        "description": "PostgreSQL port (default 5432)"
      }
    },
    "netAppAccountName": {
      "type": "string",
      "defaultValue": "postgresql-netapp-account",
      "metadata": {
        "description": "Name of the NetApp account"
      }
    },
    "netAppPoolName": {
      "type": "string",
      "defaultValue": "postgresql-pool",
      "metadata": {
        "description": "Name of the NetApp pool"
      }
    },
    "netAppPoolSizeInTB": {
      "type": "int",
      "defaultValue": 4,
      "minValue": 4,
      "maxValue": 500,
      "metadata": {
        "description": "Size of the NetApp pool in TB (minimum 4)"
      }
    },
    "netAppVolumeName": {
      "type": "string",
      "defaultValue": "postgresql-data",
      "metadata": {
        "description": "Name of the NetApp volume for PostgreSQL data"
      }
    },
    "netAppVolumeSize": {
      "type": "int",
      "defaultValue": 200,
      "metadata": {
        "description": "Size of the NetApp volume in GB"
      }
    },
    "netAppServiceLevel": {
      "type": "string",
      "allowedValues": [
        "Standard",
        "Premium",
        "Ultra"
      ],
      "defaultValue": "Standard",
      "metadata": {
        "description": "Service level for the NetApp volume"
      }
    },
    "vnetName": {
      "type": "string",
      "defaultValue": "postgresql-vnet",
      "metadata": {
        "description": "Name of the virtual network"
      }
    },
    "subnetNameVM": {
      "type": "string",
      "defaultValue": "vmSubnet",
      "metadata": {
        "description": "Name of the VM subnet"
      }
    },
    "subnetNameNetApp": {
      "type": "string",
      "defaultValue": "netappSubnet",
      "metadata": {
        "description": "Name of the NetApp subnet"
      }
    },
    "createPublicIP": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Whether to create a public IP address"
      }
    },
    "ubuntuOSVersion": {
      "type": "string",
      "defaultValue": "22_04-lts-gen2",
      "allowedValues": [
        "20_04-lts-gen2",
        "22_04-lts-gen2",
        "24_04-lts-gen2"
      ],
      "metadata": {
        "description": "The Ubuntu version for the VM. Default: Ubuntu 22.04-LTS"
      }
    }
  },
  "variables": {
    "networkInterfaceName": "[concat(parameters('vmName'), '-nic')]",
    "publicIPAddressName": "[concat(parameters('vmName'), '-ip')]",
    "nsgName": "[concat(parameters('vmName'), '-nsg')]",
    "vnetAddressPrefix": "10.0.0.0/16",
    "vmSubnetAddressPrefix": "10.0.1.0/24",
    "netAppSubnetAddressPrefix": "10.0.2.0/24",
    "linuxConfiguration": {
      "disablePasswordAuthentication": true,
      "ssh": {
        "publicKeys": [
          {
            "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
            "keyData": "[parameters('adminPasswordOrKey')]"
          }
        ]
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2020-05-01",
      "name": "[parameters('vnetName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('vnetAddressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('subnetNameVM')]",
            "properties": {
              "addressPrefix": "[variables('vmSubnetAddressPrefix')]"
            }
          },
          {
            "name": "[parameters('subnetNameNetApp')]",
            "properties": {
              "addressPrefix": "[variables('netAppSubnetAddressPrefix')]",
              "delegations": [
                {
                  "name": "NetAppDelegation",
                  "properties": {
                    "serviceName": "Microsoft.NetApp/volumes"
                  }
                }
              ]
            }
          }
        ]
      },
      "tags": {
        "project": "postgresql-vm-anf",
        "createdBy": "PostgreSQL-ANF-ARM-Template",
        "pg-plg": "true",
        "pg-template-version": "1.0.0"
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2020-05-01",
      "name": "[variables('nsgName')]",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          {
            "name": "SSH",
            "properties": {
              "priority": 1001,
              "protocol": "Tcp",
              "access": "Allow",
              "direction": "Inbound",
              "sourceAddressPrefix": "*",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "22"
            }
          },
          {
            "name": "PostgreSQL",
            "properties": {
              "priority": 1002,
              "protocol": "Tcp",
              "access": "Allow",
              "direction": "Inbound",
              "sourceAddressPrefix": "*",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "[string(parameters('postgresqlPort'))]"
            }
          },
          {
            "name": "NFS",
            "properties": {
              "priority": 1003,
              "protocol": "Tcp",
              "access": "Allow",
              "direction": "Inbound",
              "sourceAddressPrefix": "[variables('vmSubnetAddressPrefix')]",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "2049"
            }
          }
        ]
      },
      "tags": {
        "project": "postgresql-vm-anf",
        "createdBy": "PostgreSQL-ANF-ARM-Template",
        "pg-plg": "true"
      }
    },
    {
      "condition": "[parameters('createPublicIP')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2020-05-01",
      "name": "[variables('publicIPAddressName')]",
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "Static"
      },
      "sku": {
        "name": "Standard"
      },
      "tags": {
        "project": "postgresql-vm-anf",
        "createdBy": "PostgreSQL-ANF-ARM-Template",
        "pg-plg": "true"
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2020-05-01",
      "name": "[variables('networkInterfaceName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
        "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]",
        "[if(parameters('createPublicIP'), resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPAddressName')), resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": "[if(parameters('createPublicIP'), json(concat('{\"id\":\"', resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPAddressName')), '\"}')), json('null'))]",
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetNameVM'))]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
        }
      },
      "tags": {
        "project": "postgresql-vm-anf",
        "createdBy": "PostgreSQL-ANF-ARM-Template",
        "pg-plg": "true"
      }
    },
    {
      "type": "Microsoft.NetApp/netAppAccounts",
      "apiVersion": "2020-06-01",
      "name": "[parameters('netAppAccountName')]",
      "location": "[parameters('location')]",
      "tags": {
        "project": "postgresql-vm-anf",
        "createdBy": "PostgreSQL-ANF-ARM-Template",
        "pg-plg": "true",
        "pg-template-version": "1.0.0"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.NetApp/netAppAccounts/capacityPools",
      "apiVersion": "2020-06-01",
      "name": "[concat(parameters('netAppAccountName'), '/', parameters('netAppPoolName'))]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.NetApp/netAppAccounts', parameters('netAppAccountName'))]"
      ],
      "tags": {
        "project": "postgresql-vm-anf",
        "createdBy": "PostgreSQL-ANF-ARM-Template",
        "pg-plg": "true"
      },
      "properties": {
        "serviceLevel": "[parameters('netAppServiceLevel')]",
        "size": "[mul(parameters('netAppPoolSizeInTB'), 1099511627776)]"
      }
    },
    {
      "type": "Microsoft.NetApp/netAppAccounts/capacityPools/volumes",
      "apiVersion": "2020-06-01",
      "name": "[concat(parameters('netAppAccountName'), '/', parameters('netAppPoolName'), '/', parameters('netAppVolumeName'))]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.NetApp/netAppAccounts/capacityPools', parameters('netAppAccountName'), parameters('netAppPoolName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]"
      ],
      "tags": {
        "project": "postgresql-vm-anf",
        "volumeName": "[parameters('netAppVolumeName')]",
        "createdBy": "PostgreSQL-ANF-ARM-Template",
        "pg-plg": "true"
      },
      "properties": {
        "serviceLevel": "[parameters('netAppServiceLevel')]",
        "creationToken": "[parameters('netAppVolumeName')]",
        "usageThreshold": "[mul(parameters('netAppVolumeSize'), 1073741824)]",
        "subnetId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetNameNetApp'))]",
        "protocolTypes": ["NFSv3"],
        "exportPolicy": {
          "rules": [
            {
              "ruleIndex": 1,
              "unixReadOnly": false,
              "unixReadWrite": true,
              "cifs": false,
              "nfsv3": true,
              "nfsv41": false,
              "allowedClients": "[variables('vmSubnetAddressPrefix')]",
              "rootAccessEnabled": true,
              "kerberos5ReadOnly": false,
              "kerberos5ReadWrite": false,
              "kerberos5iReadOnly": false,
              "kerberos5iReadWrite": false,
              "kerberos5pReadOnly": false,
              "kerberos5pReadWrite": false
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2020-06-01",
      "name": "[parameters('vmName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
      ],
      "tags": {
        "project": "postgresql-vm-anf",
        "createdBy": "PostgreSQL-ANF-ARM-Template",
        "pg-plg": "true"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPasswordOrKey')]",
          "linuxConfiguration": "[if(equals(parameters('authenticationType'), 'password'), json('null'), variables('linuxConfiguration'))]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "Canonical",
            "offer": "0001-com-ubuntu-server-jammy",
            "sku": "[parameters('ubuntuOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "Premium_LRS"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "waitForANFVolume",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.NetApp/netAppAccounts/capacityPools/volumes', parameters('netAppAccountName'), parameters('netAppPoolName'), parameters('netAppVolumeName'))]"
      ],
      "kind": "AzureCLI",
      "properties": {
        "azCliVersion": "2.20.0",
        "timeout": "PT30M",
        "retentionInterval": "P1D",
        "cleanupPreference": "OnSuccess",
        "scriptContent": "[concat('#!/bin/bash\necho \"Waiting for NetApp volume to be fully provisioned...\"\nsleep 180\necho \"ANF volume provision wait complete\"\necho \"NetApp IP address is: $(az netapp volume show --resource-group ', resourceGroup().name, ' --account-name ', parameters('netAppAccountName'), ' --pool-name ', parameters('netAppPoolName'), ' --volume-name ', parameters('netAppVolumeName'), ' --query \\'mountTargets[0].ipAddress\\' -o tsv)'\n)]"
      }
    },
    {
      "apiVersion": "2021-07-01",
      "type": "Microsoft.Compute/virtualMachines/runCommands",
      "name": "[concat(parameters('vmName'), '/setupPostgreSQL')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines', parameters('vmName'))]",
        "[resourceId('Microsoft.Resources/deploymentScripts', 'waitForANFVolume')]"
      ],
      "properties": {
        "asyncExecution": false,
        "timeoutInSeconds": 1800,
        "runAsUser": "root",
        "source": {
          "script": "[concat('#!/bin/bash\n\nset -e\n\nexec > /var/log/postgresql-setup.log 2>&1\necho \"Starting PostgreSQL setup script at $(date)\"\n\nPOSTGRESQL_VERSION=\"', parameters('postgresqlVersion'), '\"\nPOSTGRESQL_ADMIN_PASSWORD=\"', parameters('postgresqlAdminPassword'), '\"\nDATABASE_NAME=\"', parameters('databaseName'), '\"\nDATABASE_USER=\"', parameters('databaseUser'), '\"\nDATABASE_PASSWORD=\"', parameters('databasePassword'), '\"\nNETAPP_IP=\"', reference(resourceId('Microsoft.NetApp/netAppAccounts/capacityPools/volumes', parameters('netAppAccountName'), parameters('netAppPoolName'), parameters('netAppVolumeName'))).mountTargets[0].ipAddress, '\"\nNETAPP_PATH=\"/', parameters('netAppVolumeName'), '\"\nMOUNT_PATH=\"/mnt/', parameters('netAppVolumeName'), '\"\nPOSTGRESQL_DATA_DIR=\"/mnt/', parameters('netAppVolumeName'), '/postgresql-data\"\nPOSTGRESQL_PORT=', parameters('postgresqlPort'), '\n\necho \"PostgreSQL Version: $POSTGRESQL_VERSION\"\necho \"NetApp IP: $NETAPP_IP\"\necho \"NetApp Path: $NETAPP_PATH\"\necho \"Mount Path: $MOUNT_PATH\"\necho \"PostgreSQL Data Directory: $POSTGRESQL_DATA_DIR\"\n\napt-get update -q\napt-get install -y nfs-common\n\nmkdir -p $MOUNT_PATH\n\nRETRIES=30\ncount=0\nwhile [ $count -lt $RETRIES ]; do\n    if ping -c 1 $NETAPP_IP &> /dev/null; then\n        echo \"NetApp endpoint is reachable\"\n        break\n    fi\n    count=$((count+1))\n    echo \"Waiting for NetApp endpoint... Attempt $count of $RETRIES\"\n    sleep 10\ndone\n\nif [ $count -eq $RETRIES ]; then\n    echo \"ERROR: Could not reach NetApp endpoint after $RETRIES attempts\"\n    exit 1\nfi\n\nmount -t nfs -o rw,hard,rsize=262144,wsize=262144,vers=3,tcp $NETAPP_IP:$NETAPP_PATH $MOUNT_PATH\n\nif ! mount | grep -q \"$MOUNT_PATH\"; then\n    echo \"ERROR: ANF volume mount failed\"\n    exit 1\nfi\n\necho \"ANF volume mounted successfully\"\n\ngrep -v \"$MOUNT_PATH\" /etc/fstab > /etc/fstab.new || true\nmv /etc/fstab.new /etc/fstab\necho \"$NETAPP_IP:$NETAPP_PATH $MOUNT_PATH nfs rw,hard,rsize=262144,wsize=262144,vers=3,tcp 0 0\" >> /etc/fstab\n\necho \"Installing PostgreSQL $POSTGRESQL_VERSION...\"\nexport DEBIAN_FRONTEND=noninteractive\n\napt-get install -y wget ca-certificates\nwget --quiet -O - https://www.postgresql.org/media/keys/ACCC4CF8.asc | apt-key add -\necho \"deb http://apt.postgresql.org/pub/repos/apt/ $(lsb_release -cs)-pgdg main\" > /etc/apt/sources.list.d/pgdg.list\napt-get update -q\n\napt-get install -y postgresql-$POSTGRESQL_VERSION postgresql-contrib-$POSTGRESQL_VERSION\n\nsystemctl stop postgresql\n\nmkdir -p $POSTGRESQL_DATA_DIR\nchown postgres:postgres $POSTGRESQL_DATA_DIR\nchmod 700 $POSTGRESQL_DATA_DIR\n\nif [ ! -f \"$POSTGRESQL_DATA_DIR/PG_VERSION\" ]; then\n    echo \"Initializing PostgreSQL data directory on ANF...\"\n    sudo -u postgres /usr/lib/postgresql/$POSTGRESQL_VERSION/bin/initdb -D $POSTGRESQL_DATA_DIR -E UTF8 --locale=en_US.UTF-8\nfi\n\nPOSTGRESQL_CONF=\"$POSTGRESQL_DATA_DIR/postgresql.conf\"\nPOSTGRESQL_PG_HBA=\"$POSTGRESQL_DATA_DIR/pg_hba.conf\"\n\nsed -i \"s|#data_directory =.*|data_directory = \\'$POSTGRESQL_DATA_DIR\\'|\" $POSTGRESQL_CONF || echo \"data_directory = \\'$POSTGRESQL_DATA_DIR\\'\" >> $POSTGRESQL_CONF\nsed -i \"s|#listen_addresses =.*|listen_addresses = \\'*\\'|\" $POSTGRESQL_CONF || echo \"listen_addresses = \\'*\\'\" >> $POSTGRESQL_CONF\nsed -i \"s|#port =.*|port = $POSTGRESQL_PORT|\" $POSTGRESQL_CONF || echo \"port = $POSTGRESQL_PORT\" >> $POSTGRESQL_CONF\nsed -i \"s|#logging_collector =.*|logging_collector = on|\" $POSTGRESQL_CONF || echo \"logging_collector = on\" >> $POSTGRESQL_CONF\n\nif ! grep -q \"host    all             all\" $POSTGRESQL_PG_HBA; then\n    echo \"host    all             all             0.0.0.0/0               md5\" >> $POSTGRESQL_PG_HBA\nfi\n\nSYSTEMD_OVERRIDE=\"/etc/systemd/system/postgresql.service.d/override.conf\"\nmkdir -p /etc/systemd/system/postgresql.service.d\ncat > $SYSTEMD_OVERRIDE <<EOF\n[Service]\nEnvironment=PGDATA=$POSTGRESQL_DATA_DIR\nExecStart=\nExecStart=/usr/lib/postgresql/$POSTGRESQL_VERSION/bin/postgres -D $POSTGRESQL_DATA_DIR -c config_file=$POSTGRESQL_CONF\nEOF\n\nsystemctl daemon-reload\n\nsudo -u postgres psql -c \"ALTER USER postgres PASSWORD \\'$POSTGRESQL_ADMIN_PASSWORD\\';\" || true\n\nsystemctl start postgresql\nsystemctl enable postgresql\n\nsleep 5\nRETRIES=30\ncount=0\nwhile [ $count -lt $RETRIES ]; do\n    if sudo -u postgres psql -c \"SELECT 1;\" > /dev/null 2>&1; then\n        echo \"PostgreSQL is ready\"\n        break\n    fi\n    count=$((count+1))\n    echo \"Waiting for PostgreSQL... Attempt $count of $RETRIES\"\n    sleep 5\ndone\n\nif [ $count -eq $RETRIES ]; then\n    echo \"ERROR: PostgreSQL did not start properly\"\n    exit 1\nfi\n\nsudo -u postgres psql -c \"CREATE DATABASE $DATABASE_NAME;\" || echo \"Database may already exist\"\nsudo -u postgres psql -c \"CREATE USER $DATABASE_USER WITH PASSWORD \\'$DATABASE_PASSWORD\\';\" || echo \"User may already exist\"\nsudo -u postgres psql -c \"GRANT ALL PRIVILEGES ON DATABASE $DATABASE_NAME TO $DATABASE_USER;\"\nsudo -u postgres psql -d $DATABASE_NAME -c \"GRANT ALL ON SCHEMA public TO $DATABASE_USER;\"\nsudo -u postgres psql -d $DATABASE_NAME -c \"CREATE TABLE IF NOT EXISTS test_table (id SERIAL PRIMARY KEY, message TEXT, created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP);\" || true\n\necho \"PostgreSQL setup completed successfully at $(date)\"\necho \"PostgreSQL data directory: $POSTGRESQL_DATA_DIR\"\necho \"Database: $DATABASE_NAME\"\necho \"User: $DATABASE_USER\"\necho \"Port: $POSTGRESQL_PORT\"\n')]"
        }
      }
    }
  ],
  "outputs": {
    "adminUsername": {
      "type": "string",
      "value": "[parameters('adminUsername')]"
    },
    "vmPublicIP": {
      "type": "string",
      "condition": "[parameters('createPublicIP')]",
      "value": "[reference(variables('publicIPAddressName')).ipAddress]"
    },
    "vmPrivateIP": {
      "type": "string",
      "value": "[reference(variables('networkInterfaceName')).ipConfigurations[0].properties.privateIPAddress]"
    },
    "sshCommand": {
      "type": "string",
      "condition": "[parameters('createPublicIP')]",
      "value": "[concat('ssh ', parameters('adminUsername'), '@', reference(variables('publicIPAddressName')).ipAddress)]"
    },
    "postgresqlConnectionString": {
      "type": "securestring",
      "value": "[concat('host=', if(parameters('createPublicIP'), reference(variables('publicIPAddressName')).ipAddress, reference(variables('networkInterfaceName')).ipConfigurations[0].properties.privateIPAddress), ' port=', string(parameters('postgresqlPort')), ' dbname=', parameters('databaseName'), ' user=', parameters('databaseUser'), ' password=', parameters('databasePassword'))]"
    },
    "psqlCommand": {
      "type": "string",
      "value": "[concat('psql -h ', if(parameters('createPublicIP'), reference(variables('publicIPAddressName')).ipAddress, reference(variables('networkInterfaceName')).ipConfigurations[0].properties.privateIPAddress), ' -p ', string(parameters('postgresqlPort')), ' -U ', parameters('databaseUser'), ' -d ', parameters('databaseName'))]"
    },
    "postgresqlDataDirectory": {
      "type": "string",
      "value": "[concat('/mnt/', parameters('netAppVolumeName'), '/postgresql-data')]"
    },
    "netAppVolumeIP": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.NetApp/netAppAccounts/capacityPools/volumes', parameters('netAppAccountName'), parameters('netAppPoolName'), parameters('netAppVolumeName'))).mountTargets[0].ipAddress]"
    },
    "volumeMountPath": {
      "type": "string",
      "value": "[concat('/mnt/', parameters('netAppVolumeName'))]"
    }
  }
}

