{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "type": "string",
      "defaultValue": "postgresql-vm",
      "metadata": {
        "description": "Name of the virtual machine"
      }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "azureuser",
      "metadata": {
        "description": "Username for the Virtual Machine"
      }
    },
    "authenticationType": {
      "type": "string",
      "defaultValue": "password",
      "allowedValues": [
        "password",
        "sshPublicKey"
      ],
      "metadata": {
        "description": "Type of authentication to use on the Virtual Machine"
      }
    },
    "adminPasswordOrKey": {
      "type": "securestring",
      "metadata": {
        "description": "Password or SSH key for the Virtual Machine"
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_D2s_v3",
      "metadata": {
        "description": "Size of the virtual machine"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "postgresqlVersion": {
      "type": "string",
      "defaultValue": "15",
      "allowedValues": [
        "14",
        "15",
        "16"
      ],
      "metadata": {
        "description": "PostgreSQL version to install (14, 15, or 16)"
      }
    },
    "postgresqlAdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for PostgreSQL superuser (postgres)"
      }
    },
    "databaseName": {
      "type": "string",
      "defaultValue": "mydb",
      "metadata": {
        "description": "Name of the PostgreSQL database to create"
      }
    },
    "databaseUser": {
      "type": "string",
      "defaultValue": "appuser",
      "metadata": {
        "description": "Name of the PostgreSQL database user to create"
      }
    },
    "databasePassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the PostgreSQL database user"
      }
    },
    "postgresqlPort": {
      "type": "int",
      "defaultValue": 5432,
      "metadata": {
        "description": "PostgreSQL port (default 5432)"
      }
    },
    "netAppAccountName": {
      "type": "string",
      "defaultValue": "postgresql-netapp-account",
      "metadata": {
        "description": "Name of the NetApp account"
      }
    },
    "netAppPoolName": {
      "type": "string",
      "defaultValue": "postgresql-pool",
      "metadata": {
        "description": "Name of the NetApp pool"
      }
    },
    "netAppPoolSizeInTB": {
      "type": "int",
      "defaultValue": 4,
      "minValue": 4,
      "maxValue": 500,
      "metadata": {
        "description": "Size of the NetApp pool in TB (minimum 4)"
      }
    },
    "netAppVolumeName": {
      "type": "string",
      "defaultValue": "postgresql-data",
      "metadata": {
        "description": "Name of the NetApp volume for PostgreSQL data"
      }
    },
    "netAppVolumeSize": {
      "type": "int",
      "defaultValue": 200,
      "metadata": {
        "description": "Size of the NetApp volume in GB"
      }
    },
    "netAppServiceLevel": {
      "type": "string",
      "allowedValues": [
        "Standard",
        "Premium",
        "Ultra"
      ],
      "defaultValue": "Standard",
      "metadata": {
        "description": "Service level for the NetApp volume"
      }
    },
    "vnetName": {
      "type": "string",
      "defaultValue": "postgresql-vnet",
      "metadata": {
        "description": "Name of the virtual network"
      }
    },
    "subnetNameVM": {
      "type": "string",
      "defaultValue": "vmSubnet",
      "metadata": {
        "description": "Name of the VM subnet"
      }
    },
    "subnetNameNetApp": {
      "type": "string",
      "defaultValue": "netappSubnet",
      "metadata": {
        "description": "Name of the NetApp subnet"
      }
    },
    "createPublicIP": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Whether to create a public IP address"
      }
    },
    "ubuntuOSVersion": {
      "type": "string",
      "defaultValue": "22_04-lts-gen2",
      "allowedValues": [
        "20_04-lts-gen2",
        "22_04-lts-gen2",
        "24_04-lts-gen2"
      ],
      "metadata": {
        "description": "The Ubuntu version for the VM. Default: Ubuntu 22.04-LTS"
      }
    }
  },
  "variables": {
    "networkInterfaceName": "[concat(parameters('vmName'), '-nic')]",
    "publicIPAddressName": "[concat(parameters('vmName'), '-ip')]",
    "nsgName": "[concat(parameters('vmName'), '-nsg')]",
    "vnetAddressPrefix": "10.0.0.0/16",
    "vmSubnetAddressPrefix": "10.0.1.0/24",
    "netAppSubnetAddressPrefix": "10.0.2.0/24",
    "postgresqlDataDir": "[concat('/mnt/', parameters('netAppVolumeName'), '/postgresql-data')]",
    "linuxConfiguration": {
      "disablePasswordAuthentication": true,
      "ssh": {
        "publicKeys": [
          {
            "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
            "keyData": "[parameters('adminPasswordOrKey')]"
          }
        ]
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2020-11-01",
      "name": "[parameters('vnetName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('vnetAddressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('subnetNameVM')]",
            "properties": {
              "addressPrefix": "[variables('vmSubnetAddressPrefix')]"
            }
          },
          {
            "name": "[parameters('subnetNameNetApp')]",
            "properties": {
              "addressPrefix": "[variables('netAppSubnetAddressPrefix')]",
              "delegations": [
                {
                  "name": "NetAppDelegation",
                  "properties": {
                    "serviceName": "Microsoft.NetApp/volumes"
                  }
                }
              ]
            }
          }
        ]
      },
      "tags": {
        "project": "postgresql-vm-anf",
        "createdBy": "PostgreSQL-ANF-ARM-Template",
        "pg-plg": "true",
        "pg-template-version": "1.0.0"
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2020-11-01",
      "name": "[variables('nsgName')]",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          {
            "name": "SSH",
            "properties": {
              "priority": 1001,
              "protocol": "Tcp",
              "access": "Allow",
              "direction": "Inbound",
              "sourceAddressPrefix": "*",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "22"
            }
          },
          {
            "name": "PostgreSQL",
            "properties": {
              "priority": 1002,
              "protocol": "Tcp",
              "access": "Allow",
              "direction": "Inbound",
              "sourceAddressPrefix": "*",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "[string(parameters('postgresqlPort'))]"
            }
          },
          {
            "name": "NFS",
            "properties": {
              "priority": 1003,
              "protocol": "Tcp",
              "access": "Allow",
              "direction": "Inbound",
              "sourceAddressPrefix": "[variables('vmSubnetAddressPrefix')]",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "2049"
            }
          }
        ]
      },
      "tags": {
        "project": "postgresql-vm-anf",
        "createdBy": "PostgreSQL-ANF-ARM-Template",
        "pg-plg": "true"
      }
    },
    {
      "condition": "[parameters('createPublicIP')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2020-11-01",
      "name": "[variables('publicIPAddressName')]",
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "Static"
      },
      "sku": {
        "name": "Standard"
      },
      "tags": {
        "project": "postgresql-vm-anf",
        "createdBy": "PostgreSQL-ANF-ARM-Template",
        "pg-plg": "true"
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2020-11-01",
      "name": "[variables('networkInterfaceName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
        "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]",
        "[if(parameters('createPublicIP'), resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPAddressName')), resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": "[if(parameters('createPublicIP'), json(concat('{\"id\":\"', resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPAddressName')), '\"}')), json('null'))]",
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetNameVM'))]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
        }
      },
      "tags": {
        "project": "postgresql-vm-anf",
        "createdBy": "PostgreSQL-ANF-ARM-Template",
        "pg-plg": "true"
      }
    },
    {
      "type": "Microsoft.NetApp/netAppAccounts",
      "apiVersion": "2022-03-01",
      "name": "[parameters('netAppAccountName')]",
      "location": "[parameters('location')]",
      "tags": {
        "project": "postgresql-vm-anf",
        "createdBy": "PostgreSQL-ANF-ARM-Template",
        "pg-plg": "true",
        "pg-template-version": "1.0.0"
      },
      "properties": {
        "activeDirectories": []
      }
    },
    {
      "type": "Microsoft.NetApp/netAppAccounts/capacityPools",
      "apiVersion": "2022-03-01",
      "name": "[concat(parameters('netAppAccountName'), '/', parameters('netAppPoolName'))]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.NetApp/netAppAccounts', parameters('netAppAccountName'))]"
      ],
      "tags": {
        "project": "postgresql-vm-anf",
        "createdBy": "PostgreSQL-ANF-ARM-Template",
        "pg-plg": "true"
      },
      "properties": {
        "serviceLevel": "[parameters('netAppServiceLevel')]",
        "size": "[mul(parameters('netAppPoolSizeInTB'), 1099511627776)]"
      }
    },
    {
      "type": "Microsoft.NetApp/netAppAccounts/capacityPools/volumes",
      "apiVersion": "2022-03-01",
      "name": "[concat(parameters('netAppAccountName'), '/', parameters('netAppPoolName'), '/', parameters('netAppVolumeName'))]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.NetApp/netAppAccounts/capacityPools', parameters('netAppAccountName'), parameters('netAppPoolName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]"
      ],
      "tags": {
        "project": "postgresql-vm-anf",
        "volumeName": "[parameters('netAppVolumeName')]",
        "createdBy": "PostgreSQL-ANF-ARM-Template",
        "pg-plg": "true"
      },
      "properties": {
        "serviceLevel": "[parameters('netAppServiceLevel')]",
        "creationToken": "[parameters('netAppVolumeName')]",
        "usageThreshold": "[mul(parameters('netAppVolumeSize'), 1073741824)]",
        "subnetId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetNameNetApp'))]",
        "protocolTypes": ["NFSv3"],
        "exportPolicy": {
          "rules": [
            {
              "ruleIndex": 1,
              "unixReadOnly": false,
              "unixReadWrite": true,
              "cifs": false,
              "nfsv3": true,
              "nfsv41": false,
              "kerberos5ReadOnly": false,
              "kerberos5ReadWrite": false,
              "kerberos5iReadOnly": false,
              "kerberos5iReadWrite": false,
              "kerberos5pReadOnly": false,
              "kerberos5pReadWrite": false,
              "hasRootAccess": true,
              "allowedClients": "[variables('vmSubnetAddressPrefix')]"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2021-11-01",
      "name": "[parameters('vmName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
      ],
      "tags": {
        "project": "postgresql-vm-anf",
        "createdBy": "PostgreSQL-ANF-ARM-Template",
        "pg-plg": "true"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPasswordOrKey')]",
          "linuxConfiguration": "[if(equals(parameters('authenticationType'), 'password'), json('null'), variables('linuxConfiguration'))]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "Canonical",
            "offer": "0001-com-ubuntu-server-jammy",
            "sku": "[parameters('ubuntuOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "Premium_LRS"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
            }
          ]
        }
      }
    },

    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "2021-11-01",
      "name": "[concat(parameters('vmName'), '/setupPostgreSQL')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines', parameters('vmName'))]",
        "[resourceId('Microsoft.NetApp/netAppAccounts/capacityPools/volumes', parameters('netAppAccountName'), parameters('netAppPoolName'), parameters('netAppVolumeName'))]"
      ],
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.1",
        "autoUpgradeMinorVersion": true,
        "settings": {},
        "protectedSettings": {
          "commandToExecute": "[concat('#!/bin/bash\\nset -e\\nexec > /var/log/postgresql-setup.log 2>&1\\necho \"Starting PostgreSQL setup at $(date)\"\\napt-get update -q\\napt-get install -y nfs-common\\nsleep 30\\nmkdir -p /mnt/', parameters('netAppVolumeName'), '\\nmount -t nfs -o rw,hard,rsize=262144,wsize=262144,vers=3,tcp ', reference(resourceId('Microsoft.NetApp/netAppAccounts/capacityPools/volumes', parameters('netAppAccountName'), parameters('netAppPoolName'), parameters('netAppVolumeName'))).mountTargets[0].ipAddress, ':/', parameters('netAppVolumeName'), ' /mnt/', parameters('netAppVolumeName'), '\\necho \"', reference(resourceId('Microsoft.NetApp/netAppAccounts/capacityPools/volumes', parameters('netAppAccountName'), parameters('netAppPoolName'), parameters('netAppVolumeName'))).mountTargets[0].ipAddress, ':/', parameters('netAppVolumeName'), ' /mnt/', parameters('netAppVolumeName'), ' nfs rw,hard,rsize=262144,wsize=262144,vers=3,tcp 0 0\" >> /etc/fstab\\nchmod 755 /mnt/', parameters('netAppVolumeName'), '\\nexport DEBIAN_FRONTEND=noninteractive\\napt-get install -y wget ca-certificates\\nwget --quiet -O - https://www.postgresql.org/media/keys/ACCC4CF8.asc | apt-key add -\\necho \"deb http://apt.postgresql.org/pub/repos/apt/ $(lsb_release -cs)-pgdg main\" > /etc/apt/sources.list.d/pgdg.list\\napt-get update -q\\napt-get install -y postgresql-', parameters('postgresqlVersion'), ' postgresql-contrib-', parameters('postgresqlVersion'), '\\nsystemctl stop postgresql@', parameters('postgresqlVersion'), '-main 2>/dev/null || true\\nsystemctl disable postgresql@', parameters('postgresqlVersion'), '-main 2>/dev/null || true\\nsystemctl mask postgresql@', parameters('postgresqlVersion'), '-main 2>/dev/null || true\\npkill -f postgres 2>/dev/null || true\\nrm -f /var/run/postgresql/.s.PGSQL.', parameters('postgresqlPort'), '.lock 2>/dev/null || true\\nsleep 5\\nmkdir -p ', variables('postgresqlDataDir'), '\\nchown postgres:postgres ', variables('postgresqlDataDir'), '\\nchmod 700 ', variables('postgresqlDataDir'), '\\nsudo -u postgres /usr/lib/postgresql/', parameters('postgresqlVersion'), '/bin/initdb -D ', variables('postgresqlDataDir'), ' -E UTF8 --locale=C.UTF-8 --auth-local=trust --auth-host=md5\\necho \"listen_addresses = \\047*\\047\" >> ', variables('postgresqlDataDir'), '/postgresql.conf\\necho \"port = ', parameters('postgresqlPort'), '\" >> ', variables('postgresqlDataDir'), '/postgresql.conf\\necho \"logging_collector = on\" >> ', variables('postgresqlDataDir'), '/postgresql.conf\\necho \"log_directory = \\047log\\047\" >> ', variables('postgresqlDataDir'), '/postgresql.conf\\necho \"host all all 0.0.0.0/0 md5\" >> ', variables('postgresqlDataDir'), '/pg_hba.conf\\nmkdir -p /etc/systemd/system/postgresql.service.d\\nprintf \"[Service]\\nType=forking\\nUser=postgres\\nEnvironment=PGDATA=', variables('postgresqlDataDir'), '\\nExecStart=\\nExecStart=/usr/lib/postgresql/', parameters('postgresqlVersion'), '/bin/pg_ctl start -D ', variables('postgresqlDataDir'), ' -s -o \\\"-p ', parameters('postgresqlPort'), '\\\" -w -t 300\\nExecReload=/usr/lib/postgresql/', parameters('postgresqlVersion'), '/bin/pg_ctl reload -D ', variables('postgresqlDataDir'), ' -s\\nExecStop=/usr/lib/postgresql/', parameters('postgresqlVersion'), '/bin/pg_ctl stop -D ', variables('postgresqlDataDir'), ' -s -m fast\\nPIDFile=', variables('postgresqlDataDir'), '/postmaster.pid\\nTimeoutSec=300\\nRemainAfterExit=no\\n\" > /etc/systemd/system/postgresql.service.d/override.conf\\nsystemctl daemon-reload\\nsudo -u postgres /usr/lib/postgresql/', parameters('postgresqlVersion'), '/bin/pg_ctl -D ', variables('postgresqlDataDir'), ' start -w -t 60\\nsleep 5\\nfor i in {1..30}; do\\n  if sudo -u postgres /usr/lib/postgresql/', parameters('postgresqlVersion'), '/bin/pg_isready -d postgres -h localhost -p ', parameters('postgresqlPort'), '; then\\n    echo \"PostgreSQL is ready!\"\\n    break\\n  fi\\n  echo \"Waiting for PostgreSQL... ($i/30)\"\\n  sleep 2\\ndone\\nsudo -u postgres psql -p ', parameters('postgresqlPort'), ' -c \"ALTER USER postgres PASSWORD \\047', parameters('postgresqlAdminPassword'), '\\047;\"\\nsudo -u postgres psql -p ', parameters('postgresqlPort'), ' -c \"CREATE DATABASE ', parameters('databaseName'), ';\"\\nsudo -u postgres psql -p ', parameters('postgresqlPort'), ' -c \"CREATE USER ', parameters('databaseUser'), ' WITH PASSWORD \\047', parameters('databasePassword'), '\\047;\"\\nsudo -u postgres psql -p ', parameters('postgresqlPort'), ' -c \"GRANT ALL PRIVILEGES ON DATABASE ', parameters('databaseName'), ' TO ', parameters('databaseUser'), ';\"\\nsudo -u postgres /usr/lib/postgresql/', parameters('postgresqlVersion'), '/bin/pg_ctl -D ', variables('postgresqlDataDir'), ' stop -w -t 60\\nsleep 3\\nsystemctl enable postgresql\\nsystemctl start postgresql\\necho \"PostgreSQL setup completed successfully at $(date)\"')]"
        }
      }
    }
  ],
  "outputs": {
    "adminUsername": {
      "type": "string",
      "value": "[parameters('adminUsername')]"
    },
    "vmPublicIP": {
      "type": "string",
      "condition": "[parameters('createPublicIP')]",
      "value": "[reference(variables('publicIPAddressName')).ipAddress]"
    },
    "vmPrivateIP": {
      "type": "string",
      "value": "[reference(variables('networkInterfaceName')).ipConfigurations[0].properties.privateIPAddress]"
    },
    "sshCommand": {
      "type": "string",
      "condition": "[parameters('createPublicIP')]",
      "value": "[concat('ssh ', parameters('adminUsername'), '@', reference(variables('publicIPAddressName')).ipAddress)]"
    },
    "postgresqlConnectionString": {
      "type": "securestring",
      "value": "[concat('host=', if(parameters('createPublicIP'), reference(variables('publicIPAddressName')).ipAddress, reference(variables('networkInterfaceName')).ipConfigurations[0].properties.privateIPAddress), ' port=', string(parameters('postgresqlPort')), ' dbname=', parameters('databaseName'), ' user=', parameters('databaseUser'), ' password=', parameters('databasePassword'))]"
    },
    "psqlCommand": {
      "type": "string",
      "value": "[concat('psql -h ', if(parameters('createPublicIP'), reference(variables('publicIPAddressName')).ipAddress, reference(variables('networkInterfaceName')).ipConfigurations[0].properties.privateIPAddress), ' -p ', string(parameters('postgresqlPort')), ' -U ', parameters('databaseUser'), ' -d ', parameters('databaseName'))]"
    },
    "postgresqlDataDirectory": {
      "type": "string",
      "value": "[concat('/mnt/', parameters('netAppVolumeName'), '/postgresql-data')]"
    },
    "netAppVolumeIP": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.NetApp/netAppAccounts/capacityPools/volumes', parameters('netAppAccountName'), parameters('netAppPoolName'), parameters('netAppVolumeName'))).mountTargets[0].ipAddress]"
    },
    "volumeMountPath": {
      "type": "string",
      "value": "[concat('/mnt/', parameters('netAppVolumeName'))]"
    }
  }
}

